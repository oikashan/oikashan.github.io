---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Content as AboutContent } from "@markdown/about.md";
---

<Layout title="About">
  <Container>
    <Sectionhead>
      <Fragment slot="title">About Me</Fragment>
    </Sectionhead>
    <div
      class="prose prose-p:my-2 flex flex-col gap-3 mx-auto max-w-blog mt-16">
      <AboutContent />
    </div>
  </Container>
</Layout>
