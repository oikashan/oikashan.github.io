---
// Utils
import { indexPage } from "@utils/pages";
import { Arrow } from "@components/ui/icons";

// Components
import Hero from "@components/hero.astro";
import Layout from "@layouts/Layout.astro";
import Logos from "@components/logos.astro";
import Button from "@components/ui/button.astro";
import Features from "@components/features.astro";
import Container from "@components/container.astro";
import ProjectGridStack from "@project/stacks/ProjectGridStack.astro";
import ExperienceListStack from "@experience/stacks/ExperienceListStack.astro";

const { hero, features, logos, projects, experiences } = indexPage;
---

<Layout title="">
  <Container>
    {!hero.isHidden && <Hero />}
    {
      !projects.isHidden && (
        <section id="projects" class="flex flex-col gap-layout">
          <header class="flex items-end justify-between">
            <h2 set:html={projects.title} />
            <Button
              as="a"
              href={projects.buttonHref}
              class="hidden md:inline-flex">
              {projects.buttonText} <Arrow />
            </Button>
          </header>
          <ProjectGridStack />
          <footer class="md:hidden text-right">
            <Button as="a" href={projects.buttonHref}>
              {projects.buttonText} <Arrow />
            </Button>
          </footer>
        </section>
      )
    }
    {
      !experiences.isHidden && (
        <section id="experiences" class="flex flex-col gap-layout">
          <h2 set:html={experiences.title} />
          <ExperienceListStack />
        </section>
      )
    }
    {!features.isHidden && <Features />}
    {!logos.isHidden && <Logos />}
  </Container>
</Layout>
