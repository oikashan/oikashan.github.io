---
import type { Project } from "..";
import { routes } from "@utils/routes";

type Props = {
  project: Project;
};

const { project } = Astro.props;
---

<li
  class="group hover:bg-slate-100 focus-within:bg-slate-100 rounded transition-all">
  <a
    target="_blank"
    rel="noopener noreferrer"
    href={routes.getProjectRoute(project)}>
    <slot />
  </a>
</li>
