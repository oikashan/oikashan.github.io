---
import Container from "@components/container.astro";
import SocialLinks from "@components/sociallinks.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { strings } from "@utils/strings";
import { routes } from "@utils/routes";

const menuitems: {
  title: string;
  path: string;
  badge?: boolean;
  children?: { title: string; path: string }[];
}[] = [
  {
    title: strings.experiences,
    path: routes.experiences,
  },
  {
    title: strings.projects,
    path: routes.projects,
  },
  {
    title: strings.contact,
    path: routes.contact,
  },
  {
    title: strings.about,
    path: routes.about,
  },
  {
    title: strings.blog,
    path: routes.blog,
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="font-bold text-slate-800">Kashan</span>
          <span class="text-slate-500">A.</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900 focus:text-gray-900 relative before:absolute before:top-full before:left-0 before:w-0 before:h-[2px] before:rounded before:bg-pink-600 hover:before:w-full focus:before:w-full before:transition-all before:duration-200">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center justify-end mt-3 gap-4">
          <div class="flex gap-1">
            <SocialLinks />
          </div>
          <Link
            block
            size="md"
            class="w-fit"
            style="outline"
            href={routes.resume}
            download="Kashan Ahmad's Resume">
            {strings.resume}
          </Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-1">
        <Link
          size="md"
          style="muted"
          href={routes.resume}
          download="Kashan Ahmad's Resume">
          {strings.resume}
        </Link>
        <SocialLinks />
      </div>
    </div>
  </header>
</Container>
