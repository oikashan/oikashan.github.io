---
import Container from "@components/container.astro";
import SocialLinks from "@components/sociallinks.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { strings } from "@utils/strings";
import { routes } from "@utils/routes";

const menuitems: {
  title: string;
  path: string;
  badge?: boolean;
  children?: { title: string; path: string }[];
}[] = [
  {
    title: strings.experiences,
    path: routes.experiences,
  },
  {
    title: strings.projects,
    path: routes.projects,
  },
  {
    title: strings.contact,
    path: routes.contact,
  },
  {
    title: strings.about,
    path: routes.about,
  },
  {
    title: strings.blog,
    path: routes.blog,
  },
];
---

<header
  class="h-[var(--navbar-height)] border-b fixed top-0 left-0 w-screen backdrop-blur bg-white/80 z-navbar flex items-center">
  <Container
    class:list={["flex flex-col lg:flex-row justify-between items-center"]}>
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg py-2 px-3 before-ornament"
          ><span class="font-bold text-slate-800">Kashan</span>
          <span class="text-slate-500">A.</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-pink-600 focus:text-pink-600 before-ornament">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div
          class="lg:hidden flex flex-col justify-center items-center mt-3 gap-4">
          <div class="flex gap-1">
            <SocialLinks />
          </div>
          <Link
            block
            size="md"
            class="w-fit"
            style="outline"
            href={routes.resume}
            download="Kashan Ahmad's Resume">
            {strings.resume}
          </Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-1">
        <Link
          size="md"
          style="muted"
          href={routes.resume}
          download="Kashan Ahmad's Resume">
          {strings.resume}
        </Link>
        <SocialLinks />
      </div>
    </div>
  </Container>
</header>
<style is:global>
  .astronav-toggle:not(.hidden) {
    height: calc(100svh - var(--navbar-height));
    @apply w-screen fixed z-navbar top-[var(--navbar-height)] left-0 bg-white px-5 flex flex-col items-center justify-center;
  }

  @media (max-width: theme(screens.lg)) {
    .astronav-toggle li a {
      @apply text-2xl font-semibold text-gray-800 justify-center;
    }
  }
</style>
