---
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted";
  class?: string;
  [x: string]: any;
}>;

const {
  block,
  size = "md",
  style = "primary",
  as: Tag = "button",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  md: "px-5 py-2.5",
  lg: "px-6 py-3",
};

const styles = {
  outline: "border-black hover:bg-black text-black hover:text-white",
  primary: "bg-black text-white hover:bg-slate-900 border-transparent",
  inverted: "bg-gray-100 text-black hover:bg-gray-200 border-transparent",
};
---

<Tag
  {...rest}
  class:list={[
    "border-2 rounded-element text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200 inline-flex items-center group",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}>
  <slot />
</Tag>
