---
import { footerStrings } from "@utils/strings";
import GetInTouch from "./GetInTouch.astro";

const linkProps = {
  target: "_blank",
  rel: "noreferrer",
  class: "link before-ornament",
};

const { title, description, cta } = footerStrings;
---

<div
  class="bg-black p-8 md:px-20 md:py-20 mt-20 mx-auto rounded-lg flex flex-col items-center text-center">
  {
    !title.isHidden && (
      <h2 class="text-white text-4xl md:text-6xl tracking-tight">
        {title.value}
      </h2>
    )
  }
  {
    !description.isHidden && (
      <p class="text-slate-400 mt-4 text-lg md:text-xl">{description.value}</p>
    )
  }
  {!cta.isHidden && <GetInTouch linkStyle="inverted" />}
</div>
<style>
  .link {
    @apply text-slate-300 hover:text-pink-300 focus:text-pink-300;
  }
</style>
